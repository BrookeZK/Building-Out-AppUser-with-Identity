@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h2>Account Home</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>

    <h3>My Profile</h3>
    <h4>Name: @Model.FirstName @Model.LastName</h4>
    <h4>E-mail: @Model.UserName</h4>

    <p>@Html.ActionLink("My Categories", "Categories")</p>
    <p>@Html.ActionLink("My Items", "Items")</p>

    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
